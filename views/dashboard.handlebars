<div>
    <a href="/dashboard/create/"><button id="create-post" class="button">Create post</button></a>

    <h2 class="title pb-4">Your Posts:</h2>
    <hr>
    {{#if posts.length}}
</div>

{{#each posts as |post|}}
{{> post-info post}}

<a href="/dashboard/edit/{{post.id}}"><button class="button">Edit Post</button></a>
</div>
{{/each}}

{{else}}
<h6>You do not currently have any posts.</h6>

{{/if}} 
