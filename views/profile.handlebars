<div class="profile">
    <h2>{{user.username}}'s Profile</h2>
    <p>Email: {{user.email}}</p>

    <h3>Posts:</h3>
    {{#if user.Posts}}
    {{#each user.Posts as |post|}}
    <div class="post">
        <h4>{{post.title}}</h4>
        <p>{{post.content}}</p>
    </div>
    {{/each}}
    {{else}}
    <p>No posts available.</p>
    {{/if}}
</div>