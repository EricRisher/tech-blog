<article>
    <a href="/dashboard">&larr; Back to Dashboard</a>
    <h1>Edit Post</h1>
    <form action="/edit-post/{{id}}" method="POST">
        <label for="title">Title:</label>
        <input type="text" name="title" id="title" placeholder="Title" value="{{post.title}}">
        <label for="content">Content:</label>
        <textarea name="content" id="content" cols="30" rows="10" placeholder="Content">{{post.content}}</textarea>
        <div>
            Create by you on {{format_date post.createdAt}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <button type="submit">Save Post</button>
        <button type="button" id="delete-btn">Delete Post</button>


    </form>

</article>

{{> comments post.comments}}

<script src="/public/js/edit-post.js"></script>
<script src="/public/js/delete-post.js"></script>
<script src="/public/js/comment.js"></script>